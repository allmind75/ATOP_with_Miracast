<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ssm_test"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="com.samsung.android.providers.context.permission.WRITE_USE_APP_FEATURE_SURVEY" />

    <application
        android:name="com.atop.main.MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.atop.main.SplashViewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.atop.main.MainActivity" >
        </activity>
        <activity
            android:name="com.atop.main.SpotActivity"
            android:label="@string/title_activity_spot"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.atop.main.SendFilesActivity"
            android:label="@string/title_activity_sendFile" >
        </activity>
        <activity
            android:name="com.atop.main.FileSelectActivity"
            android:label="@string/title_activity_fileSelect" >
        </activity>
        <activity
            android:name="com.atop.main.SurfaceViewMain"
            android:label="@string/title_activity_surface_view" >
