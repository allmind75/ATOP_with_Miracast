        <activity
            android:name="com.atop.keyboard.Mouse"
            android:label="@string/title_activity_mouse"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.atop.keyboard.SpacialKeyboard"
            android:label="@string/title_activity_spacial_keyboard"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.atop.keyboard.KeyboardMouseActivity"
            android:label="@string/title_activity_combine_km"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.atop.wol.WolActivity"
            android:label="@string/title_activity_wol" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.atop.main.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name="com.atop.main.SelectModeActivity"
            android:label="@string/title_activity_select_mode" >
