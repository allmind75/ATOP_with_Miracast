        <activity
            android:name="com.atop.main.SelectLayoutActivity"
            android:label="@string/title_activity_select_layout" >
        </activity>
        <activity
            android:name="com.atop.main.SurfaceViewActivity"
            android:label="@string/title_activity_surface_view" >
        </activity>
        
        <activity
            android:name="com.atop.main.SecondaryDisplayActivity"
            android:label="@string/title_activity_secondary_display" >
        </activity>
               
        <activity
            android:name="com.atop.main.ConnectServerActivity"
            android:label="@string/title_activity_connect_server" >
        </activity>
                
        <receiver android:name="com.atop.callstate.CallStateReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".FileActivity"
            android:label="@string/title_activity_file" >
        </activity>
        <activity
            android:name="com.atop.media.MideaTest"
            android:label="@string/title_activity_midea_test" >
